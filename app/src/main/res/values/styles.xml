<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base text styles -->
    <style name="TextAppearance.MoneyMaster.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MoneyMaster.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MoneyMaster.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MoneyMaster.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.MoneyMaster.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.MoneyMaster.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MoneyMaster.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.MoneyMaster.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Specialized text styles -->
    <style name="TextAppearance.MoneyMaster.Amount" parent="TextAppearance.MoneyMaster.Headline2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MoneyMaster.Amount.Income">
        <item name="android:textColor">@color/income_green</item>
    </style>

    <style name="TextAppearance.MoneyMaster.Amount.Expense">
        <item name="android:textColor">@color/expense_red</item>
    </style>

    <!-- UI Component Styles -->
    <style name="Widget.MoneyMaster.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.MoneyMaster.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.MoneyMaster.Button</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="Widget.MoneyMaster.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.MoneyMaster.Button</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Widget.MoneyMaster.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.MoneyMaster.Body1</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>
    
    <!-- Add the missing TabTextAppearance style -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>
</resources> 